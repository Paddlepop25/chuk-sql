{{#if recsLength}}
<h3 class="mt-3 mb-3">Your search result for "{{q}}"</h3>
<table class="table mb-5">
  <thead>
    <tr>
      <th scope="col">app_id</th>
      <th scope="col">name</th>
      <th scope="col">category</th>
      <th scope="col">rating</th>
      <th scope="col">installs</th>
    </tr>
  </thead>
  <tbody>
    {{#each recs }}
    <tr>
      <td>{{this.app_id}}</td>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.rating}}</td>
      <td>{{this.installs}}</td>
    </tr>
    {{/each}}

    {{!--
    IMPORTANT: the button's name + value will be the url's query (search=q)
    http://localhost:3000/search/page1?search=princess
    --}}

    <div class="d-flex justify-content-center mb-3">
      {{#if hasPrevPage}}
      <form method="GET" , action="/search/page{{prevPage}}">
        <button type="submit" class="btn btn-success mr-3" name="search" value={{q}}>◀️ Previous</button>
      </form>
      {{/if}}

      {{#if hasNextPage}}
      <form method="GET" , action="/search/page{{nextPage}}">
        <button type="submit" class="btn btn-danger" name="search" value={{q}}>Next ▶️</button>
      </form>
      {{/if}}
    </div>

  </tbody>
</table>
{{else}}
<h4>There are no results for "{{q}}"</h4>
{{/if}}